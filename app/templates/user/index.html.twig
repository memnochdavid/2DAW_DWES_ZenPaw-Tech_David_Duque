{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <main>
        <div class="title-section">
            <h1>User index</h1>
        </div>

        <div class="container container-post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn-small btn-blue">show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-small btn-blue">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_user_new') }}" class="btn btn-blue">Create new</a>
        </div>
    </main>
{% endblock %}
