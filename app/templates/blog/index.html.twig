{% extends 'base.html.twig' %}

{% block title %}ZenPaw Tech - Inicio{% endblock %}

{% block body %}
    <main class="container">
        <h1>ZenPaw Tech Blog</h1>
        <p>Últimos artículos publicados</p>

        {% for post in posts %}
            <article>
                <header>
                    <h2>
                        <a href="{{ path('app_blog_show', {slug: post.slug}) }}">
                            {{ post.title }}
                        </a>
                    </h2>
                </header>
                {{ post.summary }}
                <footer>
                    <small>Publicado el {{ post.publishedAt|date('d/m/Y') }}</small>
                </footer>
            </article>
        {% else %}
            <p>No hay artículos todavía. ¡Es hora de crear el primero!</p>
        {% endfor %}
    </main>
{% endblock %}
