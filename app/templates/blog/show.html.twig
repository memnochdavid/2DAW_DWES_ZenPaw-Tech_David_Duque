{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <main class="container">
        <article>
            <header>
                <h1>{{ post.title }}</h1>
                <p>Publicado el {{ post.publishedAt|date('d/m/Y') }}</p>
            </header>

            {# Usamos nl2br para respetar los saltos de línea del contenido #}
            {{ post.content|nl2br }}

            <footer>
                <a href="{{ path('app_blog_index') }}">← Volver al listado</a>
            </footer>
        </article>
    </main>
{% endblock %}
