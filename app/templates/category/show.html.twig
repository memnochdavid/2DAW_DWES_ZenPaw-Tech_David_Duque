{% extends 'base.html.twig' %}

{% block title %}ZenPaw Tech{% endblock %}

{% block body %}
    <main>
        <div class="title-section">
            <h1>Category</h1>
        </div>

        <div class="container container-post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="button-group">
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-blue">Edit</a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}
